var theNumber = 14;

fill(0, 0, 0);
textSize(30);
text("Analysis of: " + theNumber, 10, 36);

text("It's positive", 10, 90);
if (theNumber > 0){
    noFill();
    rect(5, 60, 200, 40); 
}

text("It's negative", 10, 140);
if (theNumber < 0){
noFill();
rect(5, 110, 200, 40); 
}

text("It's zero", 10, 190);
if (theNumber === 0){
noFill();
rect(5, 160, 200, 40); 
}




